<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <PropertyGroup>
    <Authors>nventive</Authors>
    <PackageProjectUrl>https://github.com/nventive/Uno.Wasm.WebSockets</PackageProjectUrl>
    <PackageIconUrl>https://nv-assets.azurewebsites.net/logos/uno.png</PackageIconUrl>
    <RepositoryUrl>https://github.com/nventive/Uno.Wasm.WebSockets</RepositoryUrl>
    <Description>This package provides a WebAssembly implementation of the System.Net.WebSocket base class, to be used along with the Uno.Wasm.Bootstrap package.</Description>
    <Copyright>Copyright (C) 2015-2018 nventive inc. - all rights reserved</Copyright>
  </PropertyGroup>
  
  <ItemGroup>
    <EmbeddedResource Include="Uno.Wasm.WebSockets.xml">
      <LogicalName>Uno.Wasm.WebSockets.xml</LogicalName>
    </EmbeddedResource>
    <EmbeddedResource Include="WasmScripts\WasmWebSockets.js" />
  </ItemGroup>
  
  <ItemGroup>
    <PackageReference Update="Microsoft.SourceLink.GitHub" Version="1.0.0-beta2-19367-01" />
    <PackageReference Update="Microsoft.SourceLink.Vsts.Git" Version="1.0.0-beta2-19367-01" />
  </ItemGroup>
</Project>
